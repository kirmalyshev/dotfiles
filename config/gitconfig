[core]
  excludesfile = ~/.gitignore_global
  attributesFile = ~/.gitattributes_global
	autocrlf = input
	safecrlf = warn
[pager]
  # We need `--syntax-theme` here, because I have both dark and light themes,
  # they switch dynamically:
  diff = "delta --syntax-theme=$SOBOLE_SYNTAX_THEME"
  blame = "delta --syntax-theme=$SOBOLE_SYNTAX_THEME"
  show = "delta --syntax-theme=$SOBOLE_SYNTAX_THEME"
[credential]
  helper = osxkeychain
[http]
	postBuffer = 524288000
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[commit]
  gpgsign = true
[push]
  default = simple
[fetch]
  # Prune branches that no longer exist remote. Same for tags.
  prune = true
  pruneTags = true
[user]
  useConfigOnly = true
[diff]
  indentHeuristic = on
  noprefix = true
  colorMoved = default
[interactive]
  diffFilter = "delta --color-only --features=interactive --syntax-theme=$SOBOLE_SYNTAX_THEME"
[diff "nodiff"]
	command = true
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
	enabled = 1
[submodule]
	recurse = true
	fetchJobs = 0

# Custom plugins:
[delta]
  # use n and N to move between diff sections
  navigate = true
  inspect-raw-lines = false
  line-numbers = true

  # decorations
  file-style = none
  file-decoration-style = none
  minus-style = syntax auto
[delta "interactive"]
  keep-plus-minus-markers = false

# Styling:
[color]
  ui = true
[color "diff"]
  meta = black
  frag = blue bold
  commit = black bold
  old = red bold
  new = green bold
  whitespace = red reverse

# Aliases:
[alias]
  publish = "!git push origin $(git symbolic-ref --short HEAD) -u"
  push-fork = "!git push fork $(git symbolic-ref --short HEAD) -u"
  pull-fork = "!git pull fork $(git symbolic-ref --short HEAD)"
  # Origin: https://stackoverflow.com/a/33548037/4842742
  prune-branches = "!git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D \"$branch\"; done"
  main = "!git checkout main > /dev/null 2>&1 || git checkout master"
  patch = "!git --no-pager diff"
  ch = "!git checkout $(echo \"$1\" | sd -s 'sobolevn:' '') #"
  full-clean = "!git reset -q && git checkout -- . && git clean -fd"

[diff "generated"]
	binary = true
[pull]
	rebase = false
[init]
	defaultBranch = master

# Allow local customizations in the .gitconfig_local file
[include]
  path = ~/.gitconfig_local
